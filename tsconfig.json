{
  "incremental": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "allowImportingTsExtensions": true,
    "composite": true,
    "tsBuildInfoFile": "./.tmp/tsconfig.app.tsbuildinfo",
    "strict": true,
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "paths": {
      "#src/*": ["./src/*"],
      "#root/*": ["./*"],
    }
  },
  "include": ["src"],
}
